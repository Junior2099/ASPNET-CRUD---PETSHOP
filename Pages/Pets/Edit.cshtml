@page
@model caotinhofeliz.Pages_Pets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Altear o Pet</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pet.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Pet.Nome" class="control-label"></label>
                <input asp-for="Pet.Nome" class="form-control" />
                <span asp-validation-for="Pet.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Pet.Especie" class="control-label"></label>
                <input asp-for="Pet.Especie" class="form-control" />
                <span asp-validation-for="Pet.Especie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Pet.ClienteId" class="control-label"></label>
                <select asp-for="Pet.ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="Pet.ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

