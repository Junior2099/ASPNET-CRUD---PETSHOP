@page
@model caotinhofeliz.Pages_Produtos.IndexModel

@{
    ViewData["Title"] = "Produtos";
}

<h1>Lista de Produtos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Criar Novo Produto</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Imagem</th>
        <th>@Html.DisplayNameFor(model => model.Produto[0].Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Produto[0].Descricao)</th>
        <th>@Html.DisplayNameFor(model => model.Produto[0].Preco)</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Produto)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagemUrl))
                {
                    <img src="@item.ImagemUrl" alt="Imagem do Produto" class="img-thumbnail" style="max-width: 100px;" />
                }
                else
                {
                    <span>Sem Imagem</span>
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
            <td>@Html.DisplayFor(modelItem => item.Preco)</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
